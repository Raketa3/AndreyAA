def sum_neg_between_min_max(arr):
    if not arr:
        return 0
    
    min_val = min(arr)
    max_val = max(arr)
    
    min_index = arr.index(min_val)
    max_index = arr.index(max_val)
    
    start = min(min_index, max_index)
    end = max(min_index, max_index)
    
    sum_neg = 0
    for num in arr[start + 1 : end]:
        if num < 0:
            sum_neg += num
    
    return sum_neg
